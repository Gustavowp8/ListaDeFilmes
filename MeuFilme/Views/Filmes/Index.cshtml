@model IEnumerable<MeuFilme.Models.Filmes>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista de filmes</h1>

<div class="teste">
    <p>
    <a id="criar" asp-action="Create">Adicionar novo filme a lista</a>
</p>
</div>

<form id="areabusca" asp-controller="Filmes" asp-action="Index" method="get">
    <p>
        <input id="buscar" type="text" name="SearchString" placeholder="Buscar por titulo" />
        <input id="btnBus" type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="card">
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a id="btnP" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a id="btnP" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a id="btnD" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
